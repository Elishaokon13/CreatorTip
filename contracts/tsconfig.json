    "target": "ES2021",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "hardhat.config.ts",
    "scripts/**/*",
    "contracts/**/*"
  ]
} 